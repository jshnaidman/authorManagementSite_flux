{
    "env": {
        "browser": true,
        "es6": true,
	"jquery": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
	    {"SwitchCase": 1}
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
	"no-unused-vars": 0,
	"no-underscore-dangle": 0,
	"no-alert": 0,
	"no-lone-blocks": 0,
	"eol-last": 0,
	"no-trailing-spaces": 0
    },
    "globals": {
      "jQuery": true,
      "$": true
    },
    "parser": "babel-eslint"
}
